    <EditText
            android:layout_width="266dp"
            android:layout_height="67dp"
            android:inputType="text"
            android:hint="@string/messageInputYourID"
            android:ems="10"
            android:id="@+id/IDField"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.274"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"/>

    <EditText
            android:layout_width="266dp"
            android:layout_height="72dp"
            android:inputType="numberSigned"
            android:hint="@string/messageInputCouponID"
            android:ems="10"
            android:id="@+id/CouponField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.417"

            android:fontFamily="@font/lato_bold"
            android:textSize="18sp"/>
    <Button
            android:id="@+id/btGenerate"
            android:text="@string/strBtGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="onTransitionClick"

            android:fontFamily="@font/lato_bold"
            android:textSize="20sp"/>
    <Button
            android:id="@+id/btBackInputID"
            android:onClick="onBackButtonClick"

            android:text="@string/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.726"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
